---
export interface Props {
	title: string;
	imgUrl: string;
	desc: string;
    tech: string,
    link: string
}

const { imgUrl, title, desc,tech,link } = Astro.props;
---
<div class="flex flex-col justify-center bg-white w-72 p-5 rounded-lg" >

    <img src={imgUrl} alt={title} class=" w-56 md:w-72 rounded-md mx-auto my-2"/>
    <div class="flex flex-col" >
        <h2 class="text-lg font-bold">{title}</h2>
        <p class=" text-gray-600 text-sm ">( {tech} )</p>
        <p class=" text-xs md:text-sm font-light ">{desc}</p>
        <a href={link} target="_blank" rel="noopener noreferrer" class="w-full text-center py-2 bg-neutral-100 rounded-full hover:bg-neutral-200 mt-2" >{title}</a>
    </div>
</div>